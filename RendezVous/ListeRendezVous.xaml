                                                <Setter Property="Content" Value="Le patient a été présent" />
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding RowData.Row.Confirm}" Value="False">
                                                <Setter Property="Content" Value="" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Label.Style>
                            </Label>

                        </ControlTemplate>
                    </dxg:GridColumn.DisplayTemplate>
                </dxg:GridColumn>

                <dxg:GridColumn Header="Adresse"
             Binding="{Binding Adresse}" Width="Auto" MinWidth="50" />
                <dxg:GridColumn Header="Téléphone"
             Binding="{Binding Téléphone}" Width="Auto" MinWidth="50" />

                <dxg:GridColumn Header="Email"
             Binding="{Binding Email}" Width="Auto" MinWidth="50" />
                <dxg:GridColumn Header="PrisPar"
             Binding="{Binding PrisPar}" Width="Auto"  MinWidth="50" />

            </dxg:GridControl.Columns>
        </dxg:GridControl>


    </Grid>
</UserControl>
